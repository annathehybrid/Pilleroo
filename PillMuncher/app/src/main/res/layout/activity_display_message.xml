<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/display_message"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.anna.pillmuncher.DisplayMessageActivity">


    <TextView
        android:id="@+id/thanks"
        android:text="@string/you_took_it"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp"/>


    <ImageButton
        android:id="@+id/imagebutton_pill2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pill2"

        android:layout_below="@+id/imagebutton_pill1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:onClick="sendPillMessage2"
        android:layout_gravity="left|center_vertical" />

    <ImageButton
        android:id="@+id/imagebutton_pill3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pill3"

        android:layout_below="@+id/imagebutton_pill2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:onClick="sendPillMessage3"
        android:layout_gravity="center_horizontal|bottom" />

    <ImageButton
        android:id="@+id/imagebutton_pill1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pill1"

        android:layout_below="@+id/thanks"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:onClick="sendPillMessage1"
        android:layout_gravity="right|center_vertical" />


</FrameLayout>
